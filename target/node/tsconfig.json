{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2019"
    ],
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./source",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES2019"
  },
  "include": [
    "./source/**/*"
  ]
}