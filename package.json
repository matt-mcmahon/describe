{
  "name": "@mwm/describe",
  "author": "Matt McMahon <contact@matt-mcmahon.com> (https://matt-mcmahon.com/)",
  "version": "0.0.0",
  "description": "",
  "main": "main.cjs",
  "module": "module.js",
  "keywords": [],
  "license": "ISC",
  "scripts": {
    "fix": "prettier --write **/*.js",
    "prepublishOnly": "npm run test",
    "preversion": "npm run test",
    "build": "tsc",
    "lint": "prettier-check **/*.js",
    "pretest": "tsc && prettier-check **/*.js",
    "test": "tap -r esm -R spec ./source/**/*.test.js"
  },
  "dependencies": {
    "esm": "^3.2.25"
  },
  "devDependencies": {
    "husky": "^3.0.0",
    "prettier": "^1.18.2",
    "prettier-check": "^2.0.0",
    "tap": "^14.4.1",
    "tap-nirvana": "^1.1.0",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "tap": "^14.4.1"
  },
  "esm": {
    "mode": "all",
    "sourceMap": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc && prettier-check source/**/*.js && tap -r esm -R silent ./source/**/*.test.js"
    }
  }
}
