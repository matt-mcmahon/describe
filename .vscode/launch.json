  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug TS in Deno",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "--lock=lock-file.json",
        "--cached-only",
        "--inspect-brk",
        "--unstable",
        "--allow-run",
        "--allow-read",
        "${file}"
      ],
      "envFile": "${workspaceFolder}/.env",
      "port": 9229,
      "outputCapture": "std"
    }
  ]
}
